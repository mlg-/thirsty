
<div class="title">
  <div class="row">
    <div class="small-2 large-4 columns">
      <p><%= image_tag ("#{@bar.photo_url}") %><br>
      <%= link_to "#{@bar.url}", @bar.url %></p>
      </p>
    </div>

    <div class="small-4 large-4 columns">
      <h1><%= @bar.name %></h1>

      <p><%= @bar.address %><br>

      <%= "#{@bar.city}, #{@bar.state} #{@bar.zip}" %></p>

      <p>Seating Capacity: <%= @bar.seating_capacity %><br>

      Serves Food: <%= @bar.food %><br>

      Outdoor Seating: <%= @bar.outdoor_seating %><br>

      Pet Friendly: <%= @bar.pet_friendly %></p>

      <p><%= link_to "Edit #{@bar.name}", edit_bar_path(@bar) %></p>
      <% if user_signed_in? && current_user.admin? %>
        <p><%= link_to "Delete #{@bar.name}", bar_path(@bar), method: :delete %></p>
      <% end %>
      <h4> <%= link_to "Add Review", new_bar_review_path(@bar) %> </h4>

    </div>

    <div class="small-6 large-4 columns">
      <div class="bar_description">
      <p><%= @bar.description %></p>
      </div>
    </div>
  </div>

<div>
  <% @reviews.order(created_at: :desc).each do |review| %>
    <div><%= review.title + " " + review.rating.to_s + " " + review.body %></div>
    <% if user_signed_in? && (current_user == review.user || current_user.admin?) %>
      <div><h4><%= link_to "Delete Review", bar_review_path(@bar, review), method: :delete %></h4></div>
      <% if current_user == review.user && !current_user.admin? %>
        <div><h4><%= link_to "Edit Review", edit_bar_review_path(@bar, review) %></h4></div>
      <% end %>
    <% end %>
  <% end %>
</div>
