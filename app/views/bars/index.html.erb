<div class="row">
  <div class="large-8 columns">
      <div class="title">
        <h1 class="text-center">Boston Bars</h1>
      </div>
    <ul>
      <% @bars.each do |bar| %>
      <div class="bar_row">
        <li>  <%=link_to bar.name, bar_path(bar)%>  </li>
      </div>
      <% end %>
    </ul>
  </div>

  <div class="large-4 columns">
    <div class="icon">
    <img alt="Icon" src="/assets/icon.png" />
  </div>
      <a href="/bars/new" class="button radius">Add New Bar</a>
  </div>
</div>
