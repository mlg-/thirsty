<div class="row">
  <div class="large-8 columns">
    <div class="title">
      <h1 class="text-center">Thirsty?</h1>
      <h3 class="text-center">Check out these awesome bars!</h3>
    </div>
    <ul>
      <% @bars.each do |bar| %>
      <div class="bar_row">
        <li>  <%=link_to bar.name, bar_path(bar)%>  </li>
      </div>
      <% end %>
    </ul>
      <div class="pagination">
       <div class="text-center">
         <%= paginate @bars %>
       </div>
    </div>
  </div>


  <div class="large-4 columns sidebar">
    <div id="bar-search">
      <%= form_tag bars_path, method: :get do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil, class: "button small" %>
      <% end %>
    </div>
    <div>
        <a href="/bars/new"><button class="button radius">Add New Bar</button></a>
    </div>
  </div>
</div>
