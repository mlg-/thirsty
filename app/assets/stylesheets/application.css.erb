h1 {
  color: #EA9850;
}

h2 {
  color: white;
  background-color: #5c1212;
  margin: 10px 0;
  padding-left: 20px;
  border-bottom: 2px solid #EA9850;
}

h3 {
  color: #ffd3aa
}

h4 {
  color: #ffffff
}

body {
  background: url('<%= asset_path("background.jpg") %> ') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
}

p {
  font-size: 1.4rem;
}

a {
  font-size: 1.4rem;
}

a:hover {
  color: #EA9850;
}

nav.top-bar {
  padding: 0 5em;
  font-size: 2em;
}

.alert-box {
  font-size: 1.2em;
}

li.name h1 a {
  font-size: 2em;
}

.transparent-container {
  background:rgba(0,0,0,0.7);
  margin: 0 8%;
}

.title {
  background:rgba(0,0,0,0.7);
  padding: 10px 20px 10px 20px;
}

ul.right li a {
  font-size: 1.5rem;
}

.bar_row {
  background:rgba(0,0,0,0.5);
  margin: 3px;
  padding: 10px;
}

.form {
  background:rgba(0,0,0,0.5);
}

.submit_button{
  margin-top: 10px;
}

ul {
  list-style-type: none;
  margin: 0px;
}

a {
  color: white;
}

form {
  background:rgba(0,0,0,0.5);
  padding: 0px 30px;
  color: white;
}

.bar_description {
  padding-top: 130px;
}

.gold {
  color: #ffd3aa;
  text-shadow: none;
}

a.upvote, a.downvote {
  font-size: 1.5em;
  text-shadow: 1px 1px 1px #fff;
  color: #4f0f0f;
}

.votes {
  font-family: Georgia, serif;
  font-size: 2em;
  margin-left: 7px;
}

.upvote i {
  font-size: 1.5em;
}

.downvote i {
  font-size: 1.5em;
}

.review-container:first-child, .review-container:last-child {
  border: none;
}

.review-container {
  border-bottom: 1px solid ;
  padding: 15px 0;
  clear: both;
}

.review {
  background:rgba(0,0,0,0.5);
  padding: 10px 20px 10px 20px;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}

.thumbnail {
  max-height: 100px;
}

.review-user-details img{
  padding: 10px;
}

#bar-search {
  margin: 10px;
}

.sidebar input, .sidebar button {
  margin: 20px auto;
  display: block;
}

#bar-search form {
  background: none;
  padding: 10px;
}

.sidebar {
  background-color: rgba(0,0,0,0.5);
}

#green {
  color: #3F890B !important;
}

#red {
  color: #E1292B !important;
}

.pagination {
  font-size: 1.2em;
  background-color: rgba(0,0,0,0.5);
}

.user-list-row {
  background:rgba(0,0,0,0.5);
  margin: 3px;
  padding: 10px;
}
